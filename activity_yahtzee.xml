<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Yahtzee"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.gbingham18.yahtzee.YahtzeeActivity">

    <Space
        android:id="@+id/space1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/YahtzeeButton"
        android:layout_marginTop="40dp" />
    <Space
        android:id="@+id/space2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/YahtzeeButton"
        android:layout_toRightOf="@+id/space1"
        android:layout_marginTop="40dp" />
    <Space
        android:id="@+id/space3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space1"
        android:layout_marginTop="40dp" />
    <Space
        android:id="@+id/space4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space2"
        android:layout_toLeftOf="@+id/space3"
        android:layout_marginTop="40dp" />
    <Space
        android:id="@+id/space5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/space3"
        android:layout_marginTop="40dp" />

    <Image
        android:id="@+id/dice6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#drawable/6-clipart-1.gif"
        android:layout_above="@+id/YahtzeeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="45dp" />

    <Image
        android:id="@+id/dice5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#drawable/Dice5.jpg"
        android:layout_alignTop="@+id/dice6"
        android:layout_toRightOf="@+id/dice1"
        android:layout_toEndOf="@+id/dice1" />

    <Image
        android:id="@+id/dice4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#drawable/die_04_42161_sm.gif"
        android:layout_below="@+id/YahtzeeButton"
        android:layout_alignLeft="@+id/dice5"
        android:layout_alignStart="@+id/dice5"
        android:layout_marginTop="31dp" />

    <Image
        android:id="@+id/dice3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#drawable/3c.gif"
        android:layout_alignBottom="@+id/YahtzeeButton"
        android:layout_alignLeft="@+id/dice5"
        android:layout_alignStart="@+id/dice5"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

    <Image
        android:id="@+id/dice2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#drawable/die_02_42159_sm.gif"
        android:layout_above="@+id/dice5"
        android:layout_toRightOf="@+id/dice5"
        android:layout_toEndOf="@+id/dice5"
        android:layout_marginBottom="29dp" />

    <Image
        android:id="@+id/dice1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="#drawable/1c.gif"
        android:layout_above="@+id/dice3"
        android:layout_toLeftOf="@+id/dice6"
        android:layout_toStartOf="@+id/dice6" />

    <Button
        android:text="Yahtzee!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/YahtzeeButton"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/dice1"
        android:layout_toStartOf="@+id/dice1" />


